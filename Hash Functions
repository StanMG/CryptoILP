import hashlib
import base64

# Simple SHA-256 example
message = b"ilp_secret_123"
hash_value = hashlib.sha256(message).digest()
hash_b64 = base64.urlsafe_b64encode(hash_value).decode('utf-8')

print(f"Original: {message}")
print(f"SHA-256 Hash (base64): {hash_b64}")
print(f"Hash length: {len(hash_value)} bytes")
